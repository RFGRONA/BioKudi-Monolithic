@model BioKudi.dto.ActivityDto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ActivityDto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Lugares
        </dt>
        <dd class="col-sm-10">
            @if (Model.PlacesData == null || Model.PlacesData.Count == 0)
            {
                <p>Sin lugares asociados</p>
            }
            else
            {
                <ul>
                    @foreach (var place in Model.PlacesData)
                    {
                        <li>
                            @place.IdPlace - @place.NamePlace
                        </li>
                    }
                </ul>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdActivity" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
