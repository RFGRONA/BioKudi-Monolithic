@model BioKudi.dto.ActivityDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ActivityDto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Lugares
        </dt>
        <dd class="col-sm-10">
            @if (Model.PlacesData == null || Model.PlacesData.Count == 0)
            {
                <p>Sin lugares asociados</p>
            }
            else
            {
                <ul>
                    @foreach (var place in Model.PlacesData)
                    {
                        <li>
                            @place.IdPlace - @place.NamePlace
                        </li>
                    }
                </ul>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdActivity">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
