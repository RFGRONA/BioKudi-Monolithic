@model IEnumerable<BioKudi.dto.ViewModel.ReportAuditViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reporte</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        header {
            width: 80%;
            margin: auto;
            padding: 20px 0;
            text-align: left;
            overflow: hidden;
        }

        header img {
            width: 71px;
            height: 72px;
            float: left;
            margin-right: 20px;
        }

        header h1 {
            margin: 0;
            line-height: 100px;
            margin-bottom: -10%;
        }

        .table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table th,
        .table td {
            padding: 10px;
            text-align: left;
        }

        .table th {
            background-color: #343a40;
            color: #fff;
            margin-bottom: 10%;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #e2e6ea;
        }

        p {
            text-align: right;
            margin-right: 10%;
        }
    </style>
</head>
<body>
    <header>
        <img src="https://i.imgur.com/Jlz9gfG.png" alt="Logo BioKudi">
        <h1>Reporte de auditoría</h1>
    </header>
    <p>
        <a>Reporte generado por: @Model.FirstOrDefault()?.UserName</a>
        <a>Fecha: @Model.FirstOrDefault()?.TimePrint</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>@Html.DisplayNameFor(model => model.ViewAction)</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.ViewAction)</td>
                    <td>@Html.DisplayFor(modelItem => item.Action)</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
