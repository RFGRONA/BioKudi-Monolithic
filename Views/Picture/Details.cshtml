@model BioKudi.dto.PictureDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>PictureDto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
        <dt class="col-sm-2">
            Lugar asociado
        </dt>
        <dd class="col-sm-10">
            @if (Model.PlaceId == null)
            {
                <p>Sin lugar asociado</p>
            }
            else
            {
                @Html.DisplayFor(model => model.PlaceId) @(" - ") @Html.DisplayFor(model => model.PlaceName)
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdPicture">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
