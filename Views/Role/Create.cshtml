@model BioKudi.dto.RoleDto

@{
    ViewData["Title"] = "Crear Rol";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link href="/css/Role/RoleCreate.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<div class="body">

    <h1>Crear Rol</h1>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group input-container">
            <label class="control-label">Nombre</label>
            <input asp-for="NameRole" class="form-control" />
            <span asp-validation-for="NameRole" class="text-danger"></span>
        </div>
        <div class="form-group submit">
            <input type="submit" value="Crear" id="createButton" class="btn"/>
        </div>
        <div class="backk">
            <a asp-action="Index" class="back">Volver a lista</a>
        </div>
    </form>
</div>
<script>
    $('#createButton').click(function (e) {
        e.preventDefault();

        // Verificar manualmente si los campos cumplen con los requisitos
        var nameRole = $('#NameRole').val();

        if (nameRole.trim() === '') {
            // Mostrar un mensaje de error si el campo está vacío
            Swal.fire({
                title: 'Error',
                text: 'Por favor, ingresa un nombre para el rol.',
                icon: 'error'
            });
        } else {
            // Si el campo está completado, mostrar la confirmación
            Swal.fire({
                title: '¿Estás seguro?',
                text: '¿Estás seguro de que deseas crear este rol?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, crear rol',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    $('form').submit();
                }
            });
        }
    });

</script>


