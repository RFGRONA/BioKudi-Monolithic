<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BioKudi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="icon" href="~/img/favicon.png" />
    <link href="~/css/siteadmin.css" rel="stylesheet" />
    <script src="~/js/reload.js"></script>
</head>
<body>
    <header>
        <div class="logo">
            <ul>
                <li><img src="~/img/favicon.png" alt="Logo BioKudi"></li>
                <li><a asp-controller="Home" asp-action="Index">BioKudi</a></li>
            </ul>
        </div>
        <div class="menu">
            <ul>
                <li>
                    Gestión
                    <ul>
                        <li><a asp-controller="Activity" asp-action="Index">Actividades</a></li>
                        <li><a asp-controller="Audit" asp-action="Index">Auditoria</a></li>
                        <li><a asp-controller="State" asp-action="Index">Estados</a></li>
                        <li><a asp-controller="Picture" asp-action="Index">Imagenes</a></li>
                        <li><a asp-controller="Place" asp-action="Index">Lugares</a></li>
                        <li><a asp-controller="Review" asp-action="Index">Reseñas</a></li>
                        <li><a asp-controller="Role" asp-action="Index">Roles</a></li>
                        <li><a asp-controller="Ticket" asp-action="Index">Tickets</a></li>
                        <li><a asp-controller="Account" asp-action="Index">Usuarios</a></li>
                    </ul>
                </li>
                <li><a asp-controller="Map" asp-action="Activities">Actividades</a></li>
                <li><a asp-controller="Map" asp-action="UserMap">Mapa</a></li>
                <li>
                    <a asp-controller="Home" asp-action="Ticket">
                        <i class="fa-regular fa-envelope"></i>
                    </a>
                </li>
                <li>
                    <i class="fa fa-user"></i>
                    <div class="logout">
                        <ul class="perfil">
                            <li><a asp-controller="Home" asp-action="Logout">Cerrar sesión</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <p> BioKudi</p>
        <p> &copy;2024</p>
    </footer>
</body>
</html>