@{
	ViewData["Title"] = "Registro";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
	<link href="~/css/Register.css" rel="stylesheet" />
</head>
<div class="register">
	<h1>Crear Usuario</h1>
	<form asp-controller="User" asp-action="Login" method="post">
		<div class="form-group">
			<label for="name">Nombre</label>
			<input id="name" class="form-control" type="text" required placeholder="Jose Perez"/>
		</div>
		<div class="form-group">
			<label for="email">Correo Electronico</label>
			<input id="email" class="form-control" type="email" required placeholder="alguien@dominio.com"/>
		</div>
		<div class="form-group">
			<label for="password">Contraseña</label>
			<input id="password" class="form-control" type="password" required minlength="8"/>
			<span class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" asp-controller="User" asp-action="Create">Crear</button>
	</form>
	<p>Si ya tienes una cuenta <a asp-controller="User" asp-action="Login"><i>Ingresa aqui</i></a></p>
</div>